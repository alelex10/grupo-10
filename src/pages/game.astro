---
import MainLayout from '../layouts/MainLayout.astro';
import Notification from '@components/Notification.astro';
---

<MainLayout title="Game Details">
    <Notification />
    <div id="loader" class="loader isLoading">
        Cargando información del juego...
    </div>

    <div class="banner">
        <img id="banner" src="#" alt="Banner">
    </div>
    <div class="game">
        <section class="game__hero">
            <div class="game__cover">
                <img id="game-cover" src="#" alt="Game Cover">
            </div>
            <div class="game__details">
                <h1 class="game__title" id="game-title"></h1>
                <p class="game__price" id="game-price"></p>
                <div class="game__actions">
                    <button class="game__button game__button--wishlist">
                        <img loading="lazy" src="/wishlist-icon.svg" alt="Wishlist Icon">
                    </button>
                    <button class="game__button game__button--buy">Comprar</button>
                </div>
            </div>
        </section>
        <section class="visuals">
            <h2 class="visuals__title">Visuales</h2>
            <div class="visuals__gallery" id="visuals-gallery"></div>
        </section>
        <section class="about">
            <h2 class="about__title">Acerca de</h2>
            <div class="about__content">
                <div class="about__description" id="about-description"></div>
                <div class="about__info">
                    <table class="about__table">
                        <tbody>
                            <tr>
                                <th>Desarrollador:</th>
                                <th class="about__table-value" id="about-developers"></th>
                            </tr>
                            <tr>
                                <th>Distribuidor:</th>
                                <th class="about__table-value" id="about-publishers"></th>
                            </tr>
                            <tr>
                                <th>Lanzamiento:</th>
                                <th class="about__table-value" id="about-release"></th>
                            </tr>
                            <tr>
                                <th>Generos:</th>
                                <th class="about__table-value" id="about-genres"></th>
                            </tr>
                            <tr>
                                <th>Plataformas:</th>
                                <th class="about__table-value" id="about-platforms"></th>
                            </tr>
                            <tr>
                                <th>Website:</th>
                                <th class="about__table-value" id="about-website"></th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <section class="expansions">
            <h2 class="expansions__title">Extensiones</h2>
            <div class="expansions__list" id="expansions-list">
                <div class="expansions__item">
                    <picture class="expansions__image">
                        <img src="#" alt="Expansion Cover">
                    </picture>
                    <p class="expansions__name"></p>
                </div>
                <div class="expansions__item">
                    <picture class="expansions__image">
                        <img src="#" alt="Expansion Cover">
                    </picture>
                    <p class="expansions__name"></p>
                </div>
            </div>
        </section>
        <section class="requirements">
            <h2 class="requirements__title">Requisitos para PC</h2>
            <div class="requirements__content" id="requirements-pc">
                <div class="requirements__block">
                    <h3 class="requirements__subtitle">Mínimos</h3>
                    <div class="requirements__list" id="requirements-pc-minimum"></div>
                </div>
                <div class="requirements__block">
                    <h3 class="requirements__subtitle">Recomendados</h3>
                    <div class="requirements__list" id="requirements-pc-recommended"></div>
                </div>
            </div>
        </section>
        <!-- Comentarios -->
        <section class="comments" style="padding: 2rem">
            <h2>Comentarios</h2>
            <div id="comment-list"></div>

            <form id="comment-form" style="margin-top: 1rem;">
                <textarea id="comment-input" rows="3" required placeholder="Dejá tu comentario..." style="width:100%; padding:0.5rem;"></textarea>
                <button type="submit" style="margin-top:0.5rem;">Enviar</button>
            </form>
        </section>
    </div>

    <script type="module">
        const commentList = document.getElementById('comment-list');
        const form = document.getElementById('comment-form');
        const input = document.getElementById('comment-input');
        const gameId = location.pathname; // usa la URL como ID único
        const user = JSON.parse(localStorage.getItem("loggedUser"));

        const renderComments = () => {
            const all = JSON.parse(localStorage.getItem("comments") || "{}");
            const list = all[gameId] || [];
            commentList.innerHTML = list.map(c => `<p><strong>${c.user}</strong>: ${c.text}</p>`).join("");
        };

        if (!user) {
            form.style.display = "none";
            commentList.insertAdjacentHTML("beforebegin", `<p>Iniciá sesión para dejar un comentario.</p>`);
        } else {
            form.addEventListener('submit', e => {
            e.preventDefault();
            const text = input.value.trim();
            if (!text) return;
            const all = JSON.parse(localStorage.getItem("comments") || "{}");
            all[gameId] = all[gameId] || [];
            all[gameId].push({ user: user.username, text });
            localStorage.setItem("comments", JSON.stringify(all));
            input.value = "";
            renderComments();
            });
        }

        renderComments();
    </script>
</MainLayout>

<script type="module" src="/scripts/game-loader.js"></script>

<style>
    /* ==== LOADING ==== */
    .loader {
        text-align: center;
        font-size: 1.2rem;
        padding: 2rem;
        color: var(--accent-color);
    }

    .isLoading::after {
        content: '';
        display: block;
        margin: 1rem auto 0;
        width: 30px;
        height: 30px;
        border: 4px solid var(--accent-color);
        border-top: 4px solid transparent;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* ==== BANNER ==== */
    .banner {
        display: none;
    }

    .banner img {
        width: 100%;
    }

    /* ==== GAME HERO ==== */
    .game__details {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
    }

    .game__title {
        font-size: 2rem;
        text-align: center;
    }

    .game__price {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--accent-color);
    }

    .game__actions {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .game__button {
        padding: 0.5rem 1rem;
        border: none;
        cursor: pointer;
        font-weight: bold;
        border-radius: 4px;

        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;

        background: var(--button-color);
        color: var(--primary-color)
    }

    .game__button--wishlist img {
        width: 20px;
        height: 20px;
    }

    .game__button--wishlist.added {
        background: gray;
        opacity: 0.8;
    }

    /*.game__button--buy {
        background: var(--button-color);
    }

    .game__button--wishlist {
        background: var(--button-color);
        color: #000;
    
        img {
            width: 20px;
            height: 20px;
        }
    }*/

    /* ==== VISUALS ==== */
    .visuals {
        padding: 2rem;
    }

    .visuals__title {
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .visuals__gallery {
        display: flex;
        overflow-x: auto;
        gap: 1rem;

        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .visuals__gallery::-webkit-scrollbar {
        display: none;
    }

    /*.visuals__row {
        display: flex;
        gap: 1rem;
    }*/

    .visuals__item {
        border-radius: 7px;
        height: auto;

        flex: 0 0 auto;
    }

    .visuals__item img {
        width: 100%;
        height: 130px;
        border-radius: 6px;
    }

    /* ==== ABOUT ==== */
    .about {
        padding: 2rem;
    }

    .about__title {
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .about__description {
        margin-bottom: 2rem;
        color: var(--secondary-color);
    }

    .about__table th {
        text-align: left;
        padding: 0.5rem 1rem 0.5rem 0;
        vertical-align: top;

        a {
            color: var(--accent-color);
        }
    }

    .about__table-value {
        font-weight: normal;
        color: var(--secondary-color);
    }

    /* ==== EXPANSIONS ==== */
    .expansions {
        padding: 2rem;
    }

    .expansions__title {
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .expansions__list {
        display: flex;
        overflow-x: auto;
        gap: 1rem;
        padding-bottom: 1rem;

        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    .expansions__list::-webkit-scrollbar {
        display: none;
    }

    .expansions__item {
        background-color: var(--secondary-background-color);
        border-radius: 7px;
        width: 250px;

        flex: 0 0 auto;
    }

    .expansions__image img {
        width: 100%;
        border-top-right-radius: 7px;
        border-top-left-radius: 7px;    
    }

    .expansions__name {
        margin: 1rem;
        font-weight: bold;
    }

    /* ==== REQUIREMENTS ==== */
    .requirements {
        padding: 2rem;
    }

    .requirements__title {
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }

    .requirements__block {
        margin-bottom: 2rem;
    }

    .requirements__subtitle {
        color: var(--accent-color);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .requirements__list {
        /*list-style: disc inside;*/
        padding-left: 1rem;
    }

    /*.requirements__item {
        margin-bottom: 0.5rem;
        font-weight: bold;

        span {
            color: var(--secondary-color);
            font-weight: normal;
        }
    }*/


    @media (min-width: 768px) {
        .banner {
            display: block;
            position: relative;
            width: 100%;

            img {
                height: 200px;
                object-fit: cover;
                display: block;
            }
        }

        /* ==== GAME HERO ==== */

        .game {
            position: relative;
            top: -10rem;
            z-index: 1;
            margin-bottom: -10rem;
        }

        .game__hero {
            width: 70vw;
            margin: 0 auto;
        }

        .game__cover img{
            box-shadow: 0px 0px 100px 40px #00000066;
            -webkit-box-shadow: 0px 0px 100px 40px #00000066);
            -moz-box-shadow: 0px 0px 100px 40px #00000066;

            border-radius: 10px;
            background: var(--secondary-background-color);
        }

        .game__title {
            font-size: 2.5rem;
        }

        .game__price {
            font-size: 2rem;
        }

        .game__button {
            height: 50px;
            font-size: 1.25rem;
        }

        .game__button--wishlist img {
            width: 30px;
            height: 30px;
        }

        /* ==== VISUALS ==== */
        .visuals__title {
            font-size: 1.8rem;
        }

        .visuals__item img {
            height: 150px;
        }

        /* ==== ABOUT ==== */
        .about__title {
            font-size: 1.8rem;
        }

        .about__description, .about__info {
            font-size: 1.2rem;
        }

        /* ==== EXPANSIONS ==== */
        .expansions__title {
            font-size: 1.8rem;
        }

        .expansions__item {
            width: 300px;
        }

        .expansions__name {
            font-size: 1.2rem;
        }

        /* ==== REQUIREMENTS ==== */
        .requirements__title {
            font-size: 1.8rem;
        }

        .requirements__subtitle {
            font-size: 1.6rem;
        }

        .requirements__list {
            font-size: 1.2rem;
        }
        
    }

    @media (min-width: 1024px) {
        .banner img {
            height: 300px;
        }

        .game {
            /*top: -9rem;
            margin-bottom: -9rem;*/
            width: 80vw;
            margin-left: auto;
            margin-right: auto;
        }

        .game__hero {
            padding: 0 2rem;
            padding-bottom: 2rem;
            
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 3rem;
        }

        .game__cover img {
            height: 350px;
            object-fit: cover;
            min-width: 500px;
            max-height: 350px;
        }

        .game__details {
            backdrop-filter: blur(60px);
            padding: 2rem;
            border-radius: 15px;
            max-width: 400px;
            min-width: 350px;
        }

        .game__button--wishlist img {
            width: 35px;
            height: 35px;
        }

        /* ==== VISUALS ==== */
        .visuals__item img {
            height: 200px;
        }

        /* ==== ABOUT ==== */
        .about__content {
            display: flex;
            flex-direction: row;
            /*align-items: center;*/
            gap: 2rem;
        }

        .about__description, .about__info {
            flex: 1 1 45%;
        }

        /* ==== REQUIREMENTS ==== */

        .requirements__content {
            display: flex;
            flex-direction: row;
            /*align-items: center;*/
            gap: 2rem;
        }
        
        .requirements__block {
            flex: 1 1 45%;
        }

    }

    
    /* ==== COMMENTS ==== */
       
    #comment-form textarea {
        width: 100%;
        padding: 1rem;
        border: 1px solid var(--accent-color);
        border-radius: 6px;
        background-color: var(--secondary-background-color);
        color: var(--primary-color);
        font-family: inherit;
        font-size: 1rem;
        resize: vertical;
    }

    #comment-form button {
        margin-top: 1rem;
        padding: 0.6rem 1.2rem;
        background-color: var(--accent-color);
        color: var(--primary-background-color);
        font-weight: bold;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    #comment-form button:hover {
        background-color: var(--primary-color);
        color: var(--secondary-background-color);
    }

</style>